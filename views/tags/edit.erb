
<div class='page-content'>
  <h1 class ='page-title'>Tags</h1>
  <h2 class ='page-intent'>Edit tag <%=@edit_tag.tag_name_str%> </h2>
  <br/>
  <br/>
  <hr/>
  <p class ='page-element'>Please enter new details below:</p>
  <form class='creator' action='/tags/edit' method="post">
    <label for='tag_id'>Tag ID:</label>
    <input id='tag_id' readonly type='text' name='id' value='<%=@edit_tag.id%>'/>
    <label for='tag_name'>Tag Name:</label>
    <input id='tag_name' type='text' name='tag_name_str' value='<%=@edit_tag.tag_name_str%>' required/>
    <label for='tag_budget'>Budget:</label>
    <input id='tag_budget' type='number' name='budget_num' value='<%=@edit_tag.budget_num%>' step='any' required/>
    <input type='submit' value='Update Tag'/>
    <input type='reset' value='Clear'/>
 </form>
</div>
